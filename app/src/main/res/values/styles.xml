<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_ubimovil_grey_900</item>
        <item name="colorPrimaryDark">@color/color_ubimovil_grey_900</item>
        <item name="colorAccent">@color/color_ubimovil_grey_50</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/color_ubimovil_grey_50</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="UbimovilYellowTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MainButton" parent="Theme.AppCompat.Light">

        <item name="android:textColor">@color/color_ubimovil_grey_50</item>
        <item name="colorControlHighlight">@color/color_ubimovil_grey_800</item>
        <item name="colorButtonNormal">@color/color_ubimovil_grey_900</item>
    </style>


    <style name="WhiteButton" parent="Theme.AppCompat.Light">

        <item name="android:textColor">@color/color_ubimovil_grey_50</item>
        <item name="colorControlHighlight">@color/color_ubimovil_grey_800</item>
        <item name="colorButtonNormal">@color/color_ubimovil_grey_900</item>
    </style>

    <style name="RedButton" parent="Theme.AppCompat.Light">

        <item name="android:textColor">@color/color_ubimovil_grey_50</item>
        <item name="colorControlHighlight">@color/color_ubimovil_red_300</item>
        <item name="colorButtonNormal">@color/color_ubimovil_red</item>
    </style>

    <style name="GreenButton" parent="Theme.AppCompat.Light">

        <item name="android:textColor">@color/color_ubimovil_grey_50</item>
        <item name="colorControlHighlight">@color/color_ubimovil_green_300</item>
        <item name="colorButtonNormal">@color/color_ubimovil_green</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="UbimovilYellowTheme" parent="Theme.AppCompat.Light.DarkActionBar" >

        <item name="colorPrimary">@color/color_ubimovil_yellow</item>
        <item name="colorPrimaryDark">@color/color_ubimovil_yellow_800</item>
        <item name="colorAccent">@color/color_ubimovil_grey_900</item>

    </style>

    <style name="AppTheme.NavigationBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
