<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/img_car"
        android:layout_width="110dp"
        android:layout_height="78dp"
        android:layout_margin="10dp"
        android:src="@drawable/taxi_vip" />

    <TextView
        android:id="@+id/txt_car_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorPrimaryText"
        android:text="Classic"
        android:layout_alignTop="@+id/img_car"
        android:layout_toRightOf="@+id/img_car"
        android:layout_toEndOf="@+id/img_car"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />


    <LinearLayout
        android:id="@+id/cont_car_plate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/txt_car_type"
        android:layout_toRightOf="@+id/img_car"
        android:layout_toEndOf="@+id/img_car">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_car_24dp"
            android:tint="@color/colorSecondaryText"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp" />

        <TextView
            android:id="@+id/txt_car_plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="11sp"
            android:textColor="@color/colorSecondaryText"
            android:text="PLATE: EPZ72D" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/cont_car_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/cont_car_plate"
        android:layout_toRightOf="@+id/img_car"
        android:layout_toEndOf="@+id/img_car">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_brand_24dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:tint="@color/colorSecondaryText" />

        <TextView
            android:id="@+id/txt_car_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="11sp"
            android:text="YAMAHA" />




    </LinearLayout>


</RelativeLayout>
